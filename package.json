{
  "name": "minclaw",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "pnpm -r test",
    "dev:host": "pnpm --filter minclaw-host dev",
    "dev:agent": "pnpm --filter minclaw-agent dev",
    "build": "agent/build.sh",
    "start": "docker compose up -d && pnpm dev:host",
    "stop": "docker compose down && pkill -f 'minclaw-host' || true"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  }
}
